{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "dist"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "~assets/*": ["src/assets/*"],
      "~components/*": ["src/components/*"],
      "~constants/*": ["src/constants/*"],
      "~stores/*": ["src/stores/*"],
      "~types/*": ["src/types/*"],
      "~utils/*": ["src/utils/*"],
      "~/*": ["src/*"]
    }
  }
}
